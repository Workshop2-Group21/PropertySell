<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/re1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostActivity">

    <include
        android:id="@+id/find_toolbar"
        layout="@layout/app_bar_layout">

    </include>


    <ImageButton
        android:id="@+id/btnPost"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_above="@id/recyclerview_allpost"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:background="@color/rednew"
        android:focusableInTouchMode="false"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_post" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_allpost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/find_toolbar">

    </android.support.v7.widget.RecyclerView>




</RelativeLayout>