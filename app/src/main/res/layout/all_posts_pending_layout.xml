<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/post_border"
        android:orientation="horizontal"
        android:padding="@dimen/activity_horizontal_margin"
        android:weightSum="3">

        <ImageView
            android:id="@+id/post_product_image"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_menu_camera" />


        <LinearLayout
            android:id="@+id/layout_item_desc"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1.8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/post_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/post_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textAlignment="textStart"
                android:textColor="@color/rednew"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/post_product_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Date"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/approvebtn"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.2"
            android:src="@drawable/ic_approve" />
    </LinearLayout>
    <View android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/silver"/>
</LinearLayout>