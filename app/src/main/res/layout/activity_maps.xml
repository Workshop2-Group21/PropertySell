        -->

    </RelativeLayout>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="435dp"
        android:layout_marginTop="70dp"
        tools:context=".MapsActivity" />

    <RelativeLayout
        android:id="@+id/second_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal">

        <ImageButton
            android:id="@+id/transport"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"

            android:background="@drawable/edittext_background"
            android:onClick="onClick"
            android:src="@drawable/ic_train" />

        <ImageButton
            android:id="@+id/school"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/transport"
            android:background="@drawable/edittext_background"
            android:onClick="onClick"
            android:src="@drawable/ic_school" />

        <ImageButton
            android:id="@+id/food"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/school"
            android:background="@drawable/edittext_background"
            android:onClick="onClick"
            android:src="@drawable/ic_restaurant" />

        <ImageButton
            android:id="@+id/shop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="1dp"
            android:layout_toEndOf="@+id/food"
            android:background="@drawable/edittext_background"
            android:onClick="onClick"
            android:src="@drawable/ic_shop" />

        <ImageButton
            android:id="@+id/worship"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/shop"
            android:background="@drawable/edittext_background"
            android:onClick="onClick"
            android:src="@drawable/ic_mosque" />

        <ImageButton
            android:id="@+id/hospital"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/worship"
            android:background="@drawable/edittext_background"
            android:onClick="onClick"
            android:src="@drawable/ic_emergency" />


    </RelativeLayout>

</RelativeLayout>


