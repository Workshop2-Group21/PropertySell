<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ClickPostActivity">

    <include
        android:id="@+id/find_toolbar"
        layout="@layout/app_bar_layout">
    </include>

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9.5"
            android:scrollbars="none"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <LinearLayout
                android:id="@+id/L2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:layout_above="@+id/title_id"
                    android:layout_toEndOf="@+id/price_id"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/fui_idp_button_background_github"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="42dp"
                    tools:layout_editor_absoluteY="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:orientation="vertical">

                    <TextView android:layout_width="wrap_content"
                        android:id="@+id/title_id"
                        android:layout_height="wrap_content"
                        android:text="Denim Shirt"
                        android:textSize="16dp"
                        android:textColor="@color/black"/>
                    <TextView android:layout_width="wrap_content"
                        android:id="@+id/rm_id"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Rs. 1,979"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Address"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView android:id="@+id/text_ratings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/greennew"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:text="4.3 *"
                        android:textSize="12dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>

                    <TextView android:id="@+id/text_ratings_reviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="50 ratings \u0026 15 reviews"
                        android:textSize="12dp"/>

                </LinearLayout>/

                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/silver"
                    android:layout_marginTop="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:weightSum="3">

                    <LinearLayout android:id="@+id/layout_action1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <ImageView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/wishlist"/>
                        <TextView android:id="@+id/text_action1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="8dp"
                            android:text="Add to Wishlist"
                            android:textSize="12dp"
                            android:textColor="@color/black"
                            android:gravity="left"/>
                    </LinearLayout>

                    <View android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/silver"/>

                </LinearLayout>
                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/silver"
                    android:layout_marginTop="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:orientation="vertical">
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Details"
                        android:textSize="16dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/propertytype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="\u2022 Property Type :"
                        android:textSize="12dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/bathroom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="\u2022 Bathroom : "
                        android:textSize="12dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/bedroom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="\u2022 Bedrooms :"
                        android:textSize="12dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="\u2022 Size :"
                        android:textSize="12dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/firm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="\u2022 Title Type :"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/otherinfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="\u2022 Other Info :"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="\u2022 Description :"
                        android:textSize="12dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/description_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Description all is type here, dont worry everything gonna be okay i think lol"

                        android:textSize="12dp"
                        android:textColor="@color/colorButtonTransparent"/>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

            <Button
                android:id="@+id/btnSubmitComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comment" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/silver"
        app:menu="@menu/menu_navigation" />

</LinearLayout>
