<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <FrameLayout
        android:id="@+id/screen_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_light_background"
        android:gravity="center">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ViewFlipper
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/flipper2"
                    ></ViewFlipper>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif"
                    android:text="CATEGORIES:"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@android:color/transparent">

                        <ImageButton
                            android:id="@+id/img1"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_rowWeight="1"
                            android:layout_column="0"
                            android:layout_columnSpan="1"
                            android:layout_columnWeight="1"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:background="@color/lime"
                            android:scaleType="fitCenter"
                            android:visibility="visible"
                            app:srcCompat="@drawable/h1" />

                        <TextView
                            android:id="@+id/bungtext"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_row="1"
                            android:layout_rowWeight="1"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:gravity="top"
                            android:text="Bungalow"
                            android:textAlignment="center" />

                        <ImageButton
                            android:id="@+id/img2"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_rowWeight="1"
                            android:layout_column="1"
                            android:layout_columnWeight="1"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:backgroundTint="@color/lime"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/h2" />

                        <TextView
                            android:id="@+id/singletext"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_row="1"
                            android:layout_rowWeight="1"
                            android:layout_column="1"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:gravity="top"
                            android:text="Single storey"
                            android:textAlignment="center" />

                        <ImageButton
                            android:id="@+id/img3"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_rowWeight="1"
                            android:layout_column="2"
                            android:layout_columnWeight="1"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:backgroundTint="@color/lime"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/h3" />

                        <TextView
                            android:id="@+id/tripletext"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_row="1"
                            android:layout_rowWeight="1"
                            android:layout_column="2"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:gravity="top"
                            android:text="Triple storey"
                            android:textAlignment="center" />


                        <ImageButton
                            android:id="@+id/img4"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_row="2"
                            android:layout_rowWeight="1"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:backgroundTint="@color/lime"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/h4" />

                        <ImageButton
                            android:id="@+id/img5"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_row="2"
                            android:layout_rowWeight="1"
                            android:layout_column="1"
                            android:layout_columnWeight="1"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:backgroundTint="@color/lime"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/h8" />

                        <ImageButton
                            android:id="@+id/img6"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_row="2"
                            android:layout_rowWeight="1"
                            android:layout_column="2"
                            android:layout_columnWeight="1"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:backgroundTint="@color/lime"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/h6" />

                        <TextView
                            android:id="@+id/halfstoreytext"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_row="3"
                            android:layout_rowWeight="1"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:gravity="top"
                            android:text="2/1 storey"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/semitexr"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_row="3"
                            android:layout_rowWeight="1"
                            android:layout_column="1"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:gravity="top"
                            android:text="Semi detached"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/otherstext"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_row="3"
                            android:layout_rowWeight="1"
                            android:layout_column="2"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:gravity="top"
                            android:text="Others"
                            android:textAlignment="center" />

<!--                        <ImageButton
                            android:id="@+id/img7"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_row="4"
                            android:layout_rowWeight="1"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:backgroundTint="@color/lime"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/h7" />

                        <ImageButton
                            android:id="@+id/img8"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_row="4"
                            android:layout_rowWeight="1"
                            android:layout_column="1"
                            android:layout_columnWeight="1"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:backgroundTint="@color/lime"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/h5" />

                        <ImageButton
                            android:id="@+id/img9"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_row="4"
                            android:layout_rowWeight="1"
                            android:layout_column="2"
                            android:layout_columnWeight="1"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:backgroundTint="@color/lime"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/h9" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_row="5"
                            android:layout_rowWeight="1"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:gravity="top"
                            android:text="Ninja"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_row="5"
                            android:layout_rowWeight="1"
                            android:layout_column="1"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:gravity="top"
                            android:text="Date and Time"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_row="5"
                            android:layout_rowWeight="1"
                            android:layout_column="2"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:gravity="top"
                            android:text="Food"
                            android:textAlignment="center" />-->


                    </GridLayout>
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>

    </FrameLayout>

</RelativeLayout>